# Production Environment Configuration for Provenance Graph SBOM Linker
# Copy this file to .env.production and update the values

# Database Configuration
NEO4J_PASSWORD=your-secure-neo4j-password-here

# Security Configuration
JWT_SECRET=your-very-secure-jwt-secret-minimum-32-characters-long
SIGNING_KEY_PATH=/etc/ssl/private/provenance-signing.key
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Monitoring Configuration
GRAFANA_PASSWORD=your-secure-grafana-password
PROMETHEUS_RETENTION=30d

# External Services
COSIGN_KEY_PATH=/etc/ssl/private/cosign.key
VULNERABILITY_DB_URL=https://api.vulndb.cyberriskalliance.org

# TLS/SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/provenance.crt
SSL_KEY_PATH=/etc/ssl/private/provenance.key

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/var/backups/provenance-linker
S3_BACKUP_BUCKET=provenance-backups-bucket

# Alerting Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
PAGERDUTY_INTEGRATION_KEY=your-pagerduty-integration-key

# Rate Limiting
API_RATE_LIMIT=1000
BURST_LIMIT=2000

# Resource Limits
MAX_MEMORY_MB=2048
MAX_CPU_CORES=2
MAX_CONNECTIONS=100

# Compliance Configuration
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for compliance
COMPLIANCE_SCAN_INTERVAL=24h

# Feature Flags
ENABLE_SIGNATURE_VERIFICATION=true
ENABLE_VULNERABILITY_SCANNING=true
ENABLE_COMPLIANCE_REPORTING=true
ENABLE_TELEMETRY=true
ENABLE_AUDIT_LOGGING=true

# Performance Tuning
CONNECTION_POOL_SIZE=50
CACHE_TTL_SECONDS=3600
BACKGROUND_WORKERS=10

# Regional Configuration
DEPLOYMENT_REGION=us-east-1
TIMEZONE=UTC
LOCALE=en_US.UTF-8