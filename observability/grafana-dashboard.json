{
  "dashboard": {
    "id": null,
    "title": "Provenance Graph SBOM Linker - Supply Chain Security Dashboard",
    "tags": ["supply-chain", "security", "provenance", "sbom"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "refresh": "30s",
    "schemaVersion": 37,
    "version": 1,
    "panels": [
      {
        "id": 1,
        "title": "Artifact Processing Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(provenance_artifacts_total[5m])",
            "legendFormat": "Artifacts/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {"mode": "palette-classic"}
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Signature Verification Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(provenance_verifications_total{result=\"success\"}[5m]) / rate(provenance_verifications_total[5m]) * 100",
            "legendFormat": "Success Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 90},
                {"color": "green", "value": 95}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Vulnerability Severity Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (severity) (provenance_sbom_vulnerabilities)",
            "legendFormat": "{{severity}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Compliance Score",
        "type": "gauge",
        "targets": [
          {
            "expr": "provenance_compliance_score{standard=\"nist-ssdf\"}",
            "legendFormat": "NIST SSDF"
          },
          {
            "expr": "provenance_compliance_score{standard=\"eu-cra\"}",
            "legendFormat": "EU CRA"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "green", "value": 90}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Supply Chain Graph Metrics",
        "type": "timeseries",
        "targets": [
          {
            "expr": "provenance_graph_nodes_total{type=\"commit\"}",
            "legendFormat": "Commits"
          },
          {
            "expr": "provenance_graph_nodes_total{type=\"build\"}",
            "legendFormat": "Builds"
          },
          {
            "expr": "provenance_graph_nodes_total{type=\"artifact\"}",
            "legendFormat": "Artifacts"
          },
          {
            "expr": "provenance_graph_nodes_total{type=\"deployment\"}",
            "legendFormat": "Deployments"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 6,
        "title": "API Response Times",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "p99"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {"mode": "palette-classic"}
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 7,
        "title": "SBOM Processing Pipeline",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(sbom_processed_total{format=\"cyclonedx\"}[5m])",
            "legendFormat": "CycloneDX"
          },
          {
            "expr": "rate(sbom_processed_total{format=\"spdx\"}[5m])",
            "legendFormat": "SPDX"
          },
          {
            "expr": "rate(sbom_processed_total{format=\"syft\"}[5m])",
            "legendFormat": "Syft"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {"mode": "palette-classic"}
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 16}
      },
      {
        "id": 8,
        "title": "Signature Algorithm Usage",
        "type": "bargauge",
        "targets": [
          {
            "expr": "sum by (algorithm) (provenance_signature_validations)",
            "legendFormat": "{{algorithm}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 16}
      },
      {
        "id": 9,
        "title": "Neo4j Database Metrics",
        "type": "timeseries",
        "targets": [
          {
            "expr": "neo4j_store_size_bytes",
            "legendFormat": "Store Size"
          },
          {
            "expr": "neo4j_query_execution_time_seconds",
            "legendFormat": "Query Time"
          },
          {
            "expr": "neo4j_active_transactions",
            "legendFormat": "Active Transactions"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "color": {"mode": "palette-classic"}
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 16}
      },
      {
        "id": 10,
        "title": "Security Alerts",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"provenance-linker\"} |= \"ERROR\" or |= \"WARN\" | json",
            "legendFormat": ""
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "sortOrder": "Descending"
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24}
      }
    ],
    "templating": {
      "list": [
        {
          "name": "namespace",
          "type": "query",
          "query": "label_values(provenance_artifacts_total, namespace)",
          "current": {
            "value": "All",
            "text": "All"
          },
          "options": [],
          "includeAll": true,
          "multi": true
        },
        {
          "name": "environment",
          "type": "query",
          "query": "label_values(provenance_artifacts_total, environment)",
          "current": {
            "value": "production",
            "text": "production"
          },
          "options": [],
          "includeAll": false,
          "multi": false
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "type": "prometheus",
          "expr": "changes(provenance_deployments_total[1m]) > 0",
          "titleFormat": "Deployment",
          "textFormat": "New deployment detected",
          "iconColor": "green"
        },
        {
          "name": "Security Incidents",
          "type": "prometheus",
          "expr": "increase(security_incidents_total[5m]) > 0",
          "titleFormat": "Security Alert",
          "textFormat": "Security incident detected",
          "iconColor": "red"
        }
      ]
    }
  }
}