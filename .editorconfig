# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Go files
[*.go]
indent_style = tab
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# JavaScript/TypeScript
[*.{js,ts,jsx,tsx}]
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Docker files
[{Dockerfile*,*.dockerfile}]
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 4

# Protocol Buffers
[*.proto]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# CSS files
[*.css]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# Configuration files
[*.{toml,ini,cfg,conf}]
indent_size = 4

# Makefile
[{Makefile,*.mk}]
indent_style = tab
indent_size = 4

# Package files
[{package.json,package-lock.json,*.lock}]
indent_size = 2

# License and legal files
[{LICENSE*,COPYING*,COPYRIGHT*}]
trim_trailing_whitespace = false