# Production Environment Variables for Provenance Linker
# Copy this file to .env and fill in the actual values

# Application Configuration
APP_ENV=production
APP_VERSION=1.0.0
BUILD_DATE=2024-08-11T00:00:00Z
GIT_COMMIT=c2148fc

# Database Secrets
NEO4J_PASSWORD=your_secure_neo4j_password_here
REDIS_PASSWORD=your_secure_redis_password_here
CLICKHOUSE_PASSWORD=your_secure_clickhouse_password_here

# Security
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_minimum_32_characters
API_ENCRYPTION_KEY=your_32_character_encryption_key

# External Services
GRAFANA_PASSWORD=your_secure_grafana_admin_password

# SSL Configuration (if using custom certificates)
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://lang-observatory:4317
PROMETHEUS_RETENTION_DAYS=30
GRAFANA_ANONYMOUS_ENABLED=false

# Resource Limits
MAX_MEMORY_LIMIT=2G
MAX_CPU_LIMIT=2.0

# Backup Configuration
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=alerts@danieleschmidt.com
EMAIL_PASSWORD=your_email_password

# License Keys (if applicable)
NEO4J_LICENSE_KEY=your_neo4j_enterprise_license_key