# Production Environment Configuration
# Copy this to .env and configure values for your production environment

# =============================================================================
# GENERAL SETTINGS
# =============================================================================
ENVIRONMENT=production
VERSION=latest
BUILD_DATE=
COMMIT_SHA=
DOMAIN=your-domain.com

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
SERVER_PORT=8080
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================================================
# DATABASE CONFIGURATION (Neo4j)
# =============================================================================
NEO4J_URI=bolt://neo4j:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=CHANGE_ME_STRONG_PASSWORD
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687
NEO4J_LOG_LEVEL=INFO
DB_POOL_SIZE=10
DB_TIMEOUT=30s

# =============================================================================
# REDIS CACHE CONFIGURATION
# =============================================================================
REDIS_ADDR=redis:6379
REDIS_PASSWORD=CHANGE_ME_STRONG_REDIS_PASSWORD
REDIS_DB=0
REDIS_PORT=6379
CACHE_TTL=300s

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=CHANGE_ME_STRONG_JWT_SECRET_AT_LEAST_32_CHARS
API_RATE_LIMIT=100
CORS_ORIGINS=https://your-domain.com,https://api.your-domain.com
TLS_ENABLED=true

# =============================================================================
# OBSERVABILITY CONFIGURATION
# =============================================================================
METRICS_ENABLED=true
METRICS_PORT=9090
TRACING_ENABLED=true
JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_STRONG_GRAFANA_PASSWORD
GRAFANA_DOMAIN=your-domain.com

# Loki
LOKI_PORT=3100

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
MAX_SBOM_SIZE=50MB
MAX_REQUEST_SIZE=10MB
WORKER_POOL_SIZE=5
COMPLIANCE_CHECK_INTERVAL=1h

# =============================================================================
# LOAD BALANCER CONFIGURATION (Traefik)
# =============================================================================
TRAEFIK_DASHBOARD_PORT=8080
ACME_EMAIL=admin@your-domain.com

# =============================================================================
# DATA PERSISTENCE
# =============================================================================
DATA_PATH=/opt/provenance-data

# =============================================================================
# SCALING CONFIGURATION
# =============================================================================
PROVENANCE_SERVER_REPLICAS=3
NEO4J_MEMORY_HEAP_INITIAL=512m
NEO4J_MEMORY_HEAP_MAX=2g
NEO4J_MEMORY_PAGECACHE=512m

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1

# =============================================================================
# ALERTING CONFIGURATION
# =============================================================================
ALERT_EMAIL=admin@your-domain.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
PAGERDUTY_INTEGRATION_KEY=your-pagerduty-integration-key

# =============================================================================
# SSL/TLS CERTIFICATES
# =============================================================================
SSL_CERT_EMAIL=admin@your-domain.com
SSL_CERT_PROVIDER=letsencrypt
SSL_STAGING=false

# =============================================================================
# DEPLOYMENT METADATA
# =============================================================================
DEPLOYMENT_ID=
DEPLOYMENT_TIMESTAMP=
DEPLOYED_BY=
GIT_BRANCH=main