{
  "go.toolsManagement.checkForUpdates": "local",
  "go.useLanguageServer": true,
  "go.formatTool": "goimports",
  "go.lintTool": "golangci-lint",
  "go.testFlags": ["-v", "-race", "-coverprofile=coverage.out"],
  "go.coverOnSave": true,
  "go.coverageDecorator": {
    "type": "gutter",
    "coveredHighlightColor": "rgba(64,128,64,0.5)",
    "uncoveredHighlightColor": "rgba(128,64,64,0.5)"
  },
  "go.buildTags": "integration",
  "go.testTags": "unit,integration",
  "go.testTimeout": "5m",
  "go.vetOnSave": "package",
  "go.buildOnSave": "package",
  "go.lintOnSave": "package",
  
  "python.defaultInterpreterPath": "/usr/local/bin/python",
  "python.formatting.provider": "black",
  "python.linting.enabled": true,
  "python.linting.ruffEnabled": true,
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": false,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.fixAll": true,
    "source.addMissingImports": true
  },
  "editor.rulers": [80, 120],
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 120,
  
  "files.associations": {
    "*.yml": "yaml",
    "*.yaml": "yaml",
    "Dockerfile*": "dockerfile",
    "*.cypher": "cypher",
    "*.cql": "cypher",
    "*.sbom": "json",
    "*.cyclonedx": "json",
    "*.spdx": "json",
    "*.att": "json",
    "*.attestation": "json",
    "*.slsa": "json",
    ".env.*": "dotenv",
    ".hadolint.yaml": "yaml",
    ".golangci.yml": "yaml",
    "*.policy": "yaml",
    "docker-compose*.yml": "yaml"
  },
  
  "files.exclude": {
    "**/node_modules": true,
    "**/coverage": true,
    "**/coverage.out": true,
    "**/dist": true,
    "**/build": true,
    "**/.nyc_output": true,
    "**/tmp": true,
    "**/temp": true,
    "**/*.log": true,
    "**/vendor": true,
    "**/.git": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.vscode/settings.json": false
  },
  
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": ".github/workflows/*.yml",
    "https://json.schemastore.org/github-action.json": ".github/actions/*/action.yml",
    "https://raw.githubusercontent.com/compose-spec/compose-spec/master/schema/compose-spec.json": "docker-compose*.yml",
    "https://json.schemastore.org/hadolint.json": ".hadolint.yaml",
    "https://json.schemastore.org/golangci-lint.json": ".golangci.yml"
  },
  
  "terminal.integrated.defaultProfile.linux": "bash",
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "workbench.editor.enablePreview": false,
  "security.workspace.trust.enabled": true,
  "telemetry.telemetryLevel": "error"
}
